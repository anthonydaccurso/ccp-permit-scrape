{
  "name": "cpp-permit-lookup",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "server",
    "web"
  ],
  "scripts": {
    "dev": "npm run dev:server & npm run dev:web",
    "dev:server": "cd server && npm run dev",
    "dev:web": "cd web && npm run dev",
    "build": "npm run build:server && npm run build:web",
    "build:server": "cd server && npm run build",
    "build:web": "cd web && npm run build",
    "db:migrate": "cd server && npm run db:migrate",
    "db:seed": "cd server && npm run db:seed",
    "install:all": "npm install && cd server && npm install && cd ../web && npm install",
    "crawl": "tsx --tsconfig tsconfig.crawl.json scripts/crawl-and-ingest.ts"
  },
  "dependencies": {
    "@fastify/aws-lambda": "^6.1.1",
    "@fastify/cors": "^9.0.1",
    "@supabase/supabase-js": "^2.58.0",
    "dotenv": "^17.2.3",
    "fastify": "^4.26.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "serverless-http": "^4.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
